<h1>Work/show</h1>
<p>Available editions of 
  <%= @work.title %> by 
  <%= "@work.composer.name" %>
</p>

<table>
  <tr>
    <th>Edition</th>
    <th>Publisher</th>
  </tr>
  <%= @work.editions.each do |ed| %>
    <tr>
      <td><%= link_to ed.description || "(no descr.)",
      :controller => "edition",
      :action => "show"
      :id => ed.id %></td>
      <td><%= ed.publisher %></td>
    </tr>
  <% end %>
</table>
